#:kivy 2.3.1
#:import Clipboard kivy.core.clipboard.Clipboard

<FatChance>:
    size_hint_y: None
    size_y: 100
    Label:
        text: "No more issues"


<Issue>:
    canvas:
        Color:
            rgba: 0.6, 0.6, 0.6, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "horizontal"
    size_hint_y: None
    size_y: 100
    BoxLayout:
        size_hint_x: 0.9
        orientation: "vertical"
        padding: 3
        spacing: 3
        Label:
            text_size: self.size
            font_size: 24
            halign: 'left'
            valign: 'top'
            text: "Stuff is really broken"
            size_hint_y: 0.6
        Label:
            text_size: self.size
            halign: 'left'
            valign: 'bottom'
            font_size: 16
            text: "@clalancette"
            size_hint_y: 0.2
            bold: True
        Label:
            halign: 'left'
            valign: 'bottom'
            text_size: self.size
            font_size: 16
            text: "org/repo#123"
            size_hint_y: 0.2
    Button:
        size_hint: (None, None)
        size: 100, 100
        text: "dismiss"
    
<LoginScreen>:
    on_enter: self.check_login()
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 24
            text: "Login to Github by using this code"
        RelativeLayout:
            Button:
                font_size: 32
                text: root.user_code
                on_release: Clipboard.copy(self.text);
            Label:
                pos_hint: {'top': 0.65, 'right': 1.4}
                text: "Click to copy"
        Label:
            font_size: 24
            text: "at this web page"
        RelativeLayout:
            Button:
                font_size: 24
                text: root.verification_uri
                on_release: root.open_browser(self.text)
            Label:
                pos_hint: {'top': 0.65, 'right': 1.34}
                text: "Click to open browser"

<IssueScreen>:
    StackLayout:
        orientation: "tb-lr"
        padding: 3
        spacing: 3

        Issue:

        Issue:

        Issue:

        FatChance:

        Issue:


<RepoPickerScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 24
            text: "Pick repos to list issues from"
        Button:
            text: "My Public repos"
            on_release: root.use_all_user_repos()
        Button:
            text: "Gazebo PMC repos"
        Button:
            text: "ROS PMC repos"


<foobar>:
    BoxLayout:
        size_x: root.width
        