#:kivy 2.3.1
#:import Clipboard kivy.core.clipboard.Clipboard

<IssueWidget>:
    canvas:
        Color:
            rgba: root.color
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: "horizontal"
    size_hint_y: 0.2
    BoxLayout:
        size_hint_x: 0.9
        orientation: "vertical"
        padding: '3dp'
        spacing: '3dp'
        Label:
            text_size: self.size
            font_size: '20sp'
            halign: 'left'
            valign: 'top'
            text: root.issue.title
            text_size: self.size
            max_lines: 2
            size_hint_y: 0.6
        Label:
            text_size: self.size
            halign: 'left'
            valign: 'bottom'
            font_size: '16sp'
            text: "@" + root.issue.author
            size_hint_y: 0.2
            bold: True
        BoxLayout:
            size_hint_y: 0.2
            orientation: "horizontal"
            Label:
                size_hint_x: 0.7
                halign: 'left'
                valign: 'bottom'
                text_size: self.size
                font_size: '16sp'
                text: root.issue.repo.owner + '/' + root.issue.repo.name + '#' + str(root.issue.number)
            BoxLayout:
                size_hint_x: 0.3
                id: pr_status
    Button:
        size_hint: (None, None)
        size: '100dp', root.height
        text: "dismiss"
        on_release: root.do_dismiss_callback()

<ChangesRequestedWidget>:
    text: "CHANGES REQUESTED"
    font_size: '8sp'
    text_size: self.size
    bold: True
    halign: 'center'
    valign: 'middle'
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: 0.5, 0, 0, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8,]

<ApprovedWidget>:
    text: "APPROVED"
    font_size: '12sp'
    text_size: self.size
    bold: True
    halign: 'center'
    valign: 'middle'
    canvas.before:
        Color:
            rgba: 0, 0.5, 0, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8,]

<DraftWidget>:
    text: "DRAFT"
    font_size: '12sp'
    text_size: self.size
    bold: True
    halign: 'center'
    valign: 'middle'
    canvas.before:
        Color:
            rgba: 0.4, 0.4, 0.4, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8,]

<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: '24sp'
            text: "Login to Github by using this code"
        RelativeLayout:
            Button:
                font_size: '32sp'
                text: root.device_flow.user_code
                on_release: Clipboard.copy(self.text);
            Label:
                pos_hint: {'top': 0.65, 'right': 1.4}
                text: "Click to copy"
        Label:
            font_size: '24sp'
            text: "at this web page"
        RelativeLayout:
            Button:
                font_size: '24sp'
                text: root.device_flow.verification_uri
                on_release: root.open_browser(self.text)
            Label:
                pos_hint: {'top': 0.65, 'right': 1.34}
                text: "Click to open browser"

<RepoLoadingScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: '24sp'
            text: "Loading repositories"

<IssueLoadingScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: '10dp'
        Label:
            font_size: '24sp'
            text: "Loading issues and pull requests"
        ProgressBar:
            value: root.progress


<IssueScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: '0dp'
        TextInput:
            id: filter
            size_hint: (None, None)
            size: root.width, '40dp'
            font_size: '17sp'
            hint_text: 'author:sloretz is:pr ...'
            multiline: False
            on_text_validate: root.validate_filter()
            on_text: root.on_text_changing()
        StackLayout:
            id: stack
            orientation: "tb-lr"
            padding: '3dp'
            spacing: '3dp'


<IssueScreenGoBackPopup>
    auto_dismiss: False
    title: "Go to repository lists?"
    size_hint: (0.7, 0.7)

    BoxLayout:
        orientation: "vertical"

        Label:
            size_hint_y: 0.8
            font_size: '18sp'
            text: "Are you sure you want to go back to the repository lists?\n\nIf you decide to return to this same list, you will have to load all issues and PRs again. Any issues or PRs you dismissed will no longer be dismissed when you return."
            text_size: self.size
            halign: 'center'
            valign: 'middle'

        BoxLayout:
            size_hint_y: 0.2
            orientation: "horizontal"

            Button:
                size_hint_x: 0.7
                text: "Yes I'm sure"
                font_size: '24sp'
                on_release: root.on_go_back()

            Button:
                size_hint_x: 0.3
                text: "No"
                font_size: '24sp'
                on_release: root.dismiss(animation=False)


<InvalidTokenPopup>
    auto_dismiss: False
    title: "Invalid token"
    size_hint: (0.7, 0.7)

    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint_y: 0.8
            font_size: '18sp'
            text: "TreadI is unable to authenticate with the Github API. Did your personal access token expire?"
            text_size: self.size
            halign: 'center'
            valign: 'middle'

        Button:
            size_hint_y: 0.2
            text: "Exit TreadI"
            font_size: '24sp'
            on_release: root.dismiss()


<RepoPickerScreen>:
    StackLayout:
        id: stack
        orientation: "lr-tb"

        Label:
            size_hint_y: 0.1
            font_size: '24sp'
            text: "Pick a repository list"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            StackLayout:
                id: stack
                orientation: "lr-tb"
                padding: '3dp'
                spacing: '3dp'
                size_hint_y: None
                height: self.minimum_height


<RepoButton>:
    size_hint: (1, None)
    height: '60dp'
